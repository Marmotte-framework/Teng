{
    "name": "marmotte/teng",
    "description": "Template engine",
    "type": "marmotte-brick",
    "keywords": [
        "marmotte",
        "template",
        "brick"
    ],
    "homepage": "https://github.com/Marmotte-framework/Teng",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Traini",
            "email": "kevin@ktraini.com"
        }
    ],
    "funding": [
        {
            "type": "patreon",
            "url": "https://www.patreon.com/gashmob"
        }
    ],
    "require": {
        "php": ">=8.1",
        "marmotte/brick": "^1.2",
        "marmotte/http": "^1.1"
    },
    "require-dev": {
        "vimeo/psalm": "^5.9",
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Marmotte\\Teng\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Marmotte\\Teng\\": "tests/"
        }
    },
    "scripts": {
        "psalm": "psalm --no-cache",
        "test": "phpunit"
    }
}
